<!-- Jumbotron Welcome Text -->
<div class="p-5 text-center bg-light">
    <h1 class="mb-3">Welcome to Fit Jib</h1>
    <h4 class="mb-3">Get started by going to your My Workouts Dashboard or simply start one of you workouts with the quick links below.</h4>
    <a class="btn btn-primary" href="/workouts" role="button">Go to My Workouts</a>
</div>

<!-- Adding a section for the user to start their workout now -->
<div class="container text-center">
    <div class="row align-items-center">
        <div class="col-1"></div>
        <div class="col card p-1 m-1">
            <div class="card m-1">
            <h3 class="display-6">⚡Quick Workout⚡</h3>
            </div>
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                <div class="carousel-item active">
                    <img id="day-1" src="./assets/images/shoulders-and-back.jpg" class="d-block w-100 border rounded" alt="...">
                    <div class="carousel-caption d-md-block">
                    <h5 class="neonText">Day 1</h5>
                    <p class="neonText">Focus on shoulders and back.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img id="day-2" src="./assets/images/leg-squat.jpg" class="d-block w-100 border rounded" alt="...">
                    <div class="carousel-caption d-md-block">
                    <h5 class="neonText">Day 2</h5>
                    <p class="neonText">Focus on legs and core.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img id="day-3" src="./assets/images/chest-day.jpg" class="d-block w-100 border rounded" alt="...">
                    <div class="carousel-caption d-md-block">
                    <h5 class="neonText">Day 3</h5>
                    <p class="neonText">Focus on chest and arms.</p>
                    </div>
                </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>