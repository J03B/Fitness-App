<!-- Add a progress bar for how far the user is into the workout -->
<div class="progress m-2" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 25%"></div>
</div>

<!-- Current exercise header of this workout -->
<div class="container overflow-hidden text-center">
    <div class="row gx-5">
        <div class="col">
            <div class="p-3 display-6">Workout</div>
        </div>
    </div>
</div>

<!-- Card showing the current exercise in the workout -->
<div class="card text-bg-dark m-2">
    <img src="./assets/images/chest-day.jpg" class="card-img" alt="...">
    <div class="card-img-overlay">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small>Last updated 3 mins ago</small></p>
    </div>
</div>


<!-- Form section for the performance data -->
<div class="row g-1 m-1">
    <div class="col">
        <div class="form-floating">
            <select class="form-select" id="reps" aria-label="Floating label select example">
            <option selected>0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            </select>
            <label for="reps">Reps</label>
        </div>
    </div>
    <!-- Weight selection -->
    <div class="col">
        <div class="form-floating">
            <select class="form-select" id="weight" aria-label="Floating label select example">
            <option selected>0</option>
            <option value="1">2.5</option>
            <option value="5">5</option>
            <option value="7.5">7.5</option>
            <option value="10">10</option>
            </select>
            <label for="weight">Weight (lbs)</label>
        </div>
    </div>
    <!-- Comments -->
    <div class="form-floating my-3">
        <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
        <label for="floatingTextarea">Comments</label>
    </div>
</div>


<!-- Form buttons -->
<div class="btn-toolbar justify-content-around my-4" role="toolbar" aria-label="Toolbar with button groups">
    <button type="button" class="btn btn-outline-secondary">Last</button>
    <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#exerciseHistory">View previous data</button>
    <button type="button" class="btn btn-outline-primary">Next</button>
</div>

<!-- Modal to view previous workout history -->
<div class="modal fade" id="exerciseHistory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Exercise</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- 
                    Needs to be a table with the following information:
                    date | Set # | Reps | Weight
                -->
                <div class="container text-center">
                    <div class="row">
                        <div class="col-3">Date</div>
                        <div class="col-3">Set #</div>
                        <div class="col-3">Reps</div>
                        <div class="col-3">Weight</div>
                    </div>
                    <!-- Add another row with 4 divs of class col-3 to add each item -->
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>